<h1>Latest Questions</h1>

<ul>
    <% @questions.each do |question| %>
      <li class="container col-centered">
        <div class="col-md-12">
          <h1 strong><%=question.title %></h1>
            <p>
              <%=question.body %>
            </p>
            <div>
              <span class="badge"><%=question.created_at%></span>
            </div>
              <%= link_to "Show", question_path(question) %>
              <% if question.user_id == current_user %>
              <%= link_to "Destroy", question_path(question), method: :delete, data: {confirm: "are you sure?"} %>
              <% end %>
          </div>
      </li>
      <hr>
    <% end %>
</ul>

<%= link_to "Add a new question", new_question_path %>
