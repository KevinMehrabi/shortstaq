<!DOCTYPE html>
<html>
<head>
  <title>Shortstaq</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%if current_user%>
  Logged in as: <%= current_user.name %>
  <%= link_to 'Log Out', logout_path, method: :delete %>
</div>
  <% else %>
  <div>  <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" src="images/shortstaqlogo.png">ShortSTAQ</a>
            </div>

            <%= form_for :login, url: login_path, :html => { :class => "navbar-form navbar-right"} do |x| %>
              <div class="form-group">
                <%=x.text_field :email, class: "form-control",  placeholder: "Username" %>
              </div>
              <div class="form-group">
                <%=x.password_field :password, class: "form-control",  placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%=x.submit 'Log In', class: "btn btn-default" %>
              </div>


              <% end %>
          </div>
        </div>
  </div>

  <% end %>

<%= yield %>

</body>
</html>

<meta name="viewport" content="width=device-width, initial-scale=1">
